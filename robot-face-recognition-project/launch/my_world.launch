<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="debug" default="false" />
  <arg name="gui" default="true"/>
  <arg name="pause" default="false"/>
  <arg name="world" default="$(find robot-face-recognition-project)/world/empty_world.world" />


  <!-- <param name="robot_description" command="$(find xacro)/xacro - -inorder '$(find m2wr_description)/urdf/m2wr.xacro'" />

IL FAUT ENLEVER L'ESPACE ENTRE LES DEUX TIRETS - - AVANT inorder
-->

  <arg name="x" default="10.0"/> <!-- -7.0 0.0 10.0 10.0  -7.0 --> <!-- -3.0 -->
  <arg name="y" default="-3.0"/> <!-- -7.0 0.0 3.0 -3.0      -7.0 --> <!-- 1.0 -->
  <arg name="z" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world)" />
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg pause)"/>
    <arg name="use_sim_time" value="true"/>
  </include>

  <!--<group ns="/the_robot">-->

  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find robot-face-recognition-project)/the_robot_description/urdf/model.xacro'" />

  <!-- <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" 
    args="-urdf -param robot_description -model m2wr -x $(arg x) -y $(arg y) -z $(arg z)" /> -->

  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" output="screen" 
    args="-urdf -param robot_description -model the_robot -x $(arg x) -y $(arg y) -z $(arg z)" />

  <!--<node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
    args="-urdf -model rrbot -param robot_description"/>-->

  <!-- ros_control rrbot launch file -->
  <include file="$(find robot-face-recognition-project)/the_robot_control/launch/the_robot_control.launch" />

  <!--</group>-->

</launch>
